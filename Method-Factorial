import java.util.Scanner;//scanner class
public class Factorial//main class
{
    public static void main(String[] args)//main function programe code from here
    {
       Scanner sc=new Scanner(System.in);//
       int a=sc.nextInt();
       int fact=1,i=1;
       while(i<=a/2){
       fact*=i;
       i++;
       }
       if(fact==a)
       System.out.println("yes");
       else{
           System.out.println("no");
       }
    }
}
//class Factorial
class Factorial2//method of factorial
{
public static int fact(int a)//definition
{
    int fact=a;
    return fact;
}
}
